{
  "manifest_version": 3,
  "name": "X-Shield",
  "version": "1.0.0",
  "description": "AI-powered social media filtration. Removes rage bait, hides trending, enforces time limits.",
  "permissions": ["storage", "alarms", "tabs"],
  "host_permissions": [
    "https://x.com/*",
    "http://127.0.0.1:7890/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://x.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["blocked.html", "blocked.js"],
    "matches": ["https://x.com/*"]
  }]
}
